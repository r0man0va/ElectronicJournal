@page
@model ElectronicJournal.Pages.Teachers.DeleteModel

@{
    ViewData["Title"] = "Удалить преподавателя";
}

<h1>Удалить преподавателя</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.DOB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.DOB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.PhoneNumber)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Teacher.ID" />
        <input class="btn btn-outline-danger" type="submit" value="Удалить" /> |
        <a asp-page="./Index" class="btn btn-outline-secondary">Вернуться назад</a>
    </form>
</div>
