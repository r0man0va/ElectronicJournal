@page
@model ElectronicJournal.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Студенты";
}

<h1>Список студентов</h1>

<p>
    <a asp-page ="Create" class="btn btn-outline-success">Создать нового</a>
</p>

<form asp-page="./Index" method="get">
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Найти по имени:</span>
        <input type="text" name="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Поиск" class="btn btn-outline-secondary" />
        <a asp-page="./Index" class="btn btn-outline-secondary">Обратно к списку</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                @Html.DisplayNameFor(model => model.Student[0].LastName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].FirstName)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.GroupSort">
                @Html.DisplayNameFor(model => model.Student[0].GroupName)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-outline-warning">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-outline-info">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Удалить</a> 
            </td>
        </tr>
}
    </tbody>
</table>
